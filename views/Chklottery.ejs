<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>LotteryChecker Add Item</title>
</head>
<body>

    <% if(typeof mesg != "undefined") { %>
        <h1><%= mesg %></h1>
        <% } %>
        <h1>CHECK LOTTERY TO SYSTEM</h1>
    <form action="/Chklottery" method="get">
        <br>

        <div>
            <label>DATE</label>
            <input type="text" name="DATE" placeholder="DATE">
        </div>
        <br>
        <div>
            <label>Number</label>
            <input type="text" name="Number" placeholder="Number">
        </div>
        <br>
        <button type="submit">Submit</button>

        <table id=”table”>
            <table>
                <tr>
                    <th>id</th>
                    <th>DATE</th>
                    <th>Number</th>
                    <th>Prize</th>
                </tr>
                <% lottery.forEach(function(item) { %>
                <tr>
                    <td><%= item.id %></td>
                    <td><%= item.DATE %></td>
                    <td><%= item.Number %></td>
                    <td><%= item.Prize %></td>
                </tr>
                <% }) %>
            </table>
    </form>
</body>
</html>